
@using RecursosHumanos.Client.Services.Auth;
@using RecursosHumanos.Shared.Models;
@using RecursosHumanos.Shared.Requests;
@using RecursosHumanos.Client.Components.Authorization;

@inject JwtAuthenticationStateProvider _stateProvider;
@inject NavigationManager _navManager;
@inject ISessionService _sessionService;
@inject IAuthenticationService _authService;

<MudAppBar Elevation="25">
    <MudIcon Icon="@Icons.Custom.Uncategorized.WaterMelon" Size="Size.Large" Color="Color.Tertiary" />
    <MudText Typo="Typo.h6" Class="ml-4">R.R.H.H</MudText>
    <MudToolBar DisableGutters="true">
        <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" OnClick="@((e) => DrawerToggle())" Class="ml-3" />
    </MudToolBar>
    <MudSpacer />
    <MudMenu AnchorOrigin="Origin.CenterLeft" Dense="true" Class="mt-1 ml-4">
        <ActivatorContent>
            <MudAvatar Color="Color.Secondary">@_usuario.PrimeraLetra</MudAvatar>
        </ActivatorContent>
        <ChildContent>
            <MudListItem Text="@_usuario.Nombre" Icon="@Icons.Material.Outlined.Person" Disabled="true" />
            <MudListItem Text="@_usuario.Fecha.ToShortDateString()" Icon="@Icons.Material.Outlined.DateRange" Disabled="true" />
            <MudListItem Text="@_usuario.Empresa" Icon="@Icons.Material.Outlined.Place" Disabled="true" />
            <MudDivider Class="mb-2" />
            <MudListItem Text="Salir" Icon="@Icons.Material.Filled.Logout" OnClick="Salir" />
        </ChildContent>
    </MudMenu>
</MudAppBar>
<MudDrawer @bind-Open="_drawerOpen" Elevation="25" ClipMode="DrawerClipMode.Always">
    <NavMenu />
</MudDrawer>
<MudMainContent Style="height: 100vh;">
    <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
        @ChildContent
    </MudContainer>
    <MudPaper Elevation="1" Style="position:fixed; bottom:0; width: 100%; background-color: purple;">
        @_usuario.Nombre
    </MudPaper>
</MudMainContent>

